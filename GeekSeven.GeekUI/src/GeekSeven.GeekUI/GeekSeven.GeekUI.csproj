<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>GeekUI is a Framework for Blazor and Razor pages</Description>
    <Copyright>Geek Seven 2021</Copyright>
    <RepositoryUrl>https://github.com/emersont7d/GeekUI</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Company>Geek Seven</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.0-rc.1.21452.15" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Core\" />
    <Folder Include="InteropJS\" />
    <Folder Include="Pages\" />
    <Folder Include="Service\" />
    <Folder Include="Themes\" />
    <Folder Include="wwwroot\Sass\Layout\" />
    <Folder Include="wwwroot\Sass\Pages\" />
    <Folder Include="wwwroot\Sass\Themes\" />
  </ItemGroup>

</Project>

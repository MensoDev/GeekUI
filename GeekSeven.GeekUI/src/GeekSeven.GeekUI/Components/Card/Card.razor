@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EColor BackgroundColor { get; set; } = EColor.Light;

    [Parameter]
    public EColor BorderColor { get; set; } = EColor.Light;

    [Parameter]
    public string Width { get; set; }


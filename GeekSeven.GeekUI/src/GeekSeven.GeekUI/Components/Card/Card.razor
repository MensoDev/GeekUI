<div class="card @("bg-"+BackgroundColor.ToString().ToLower()) @("border-"+BorderColor.ToString().ToLower())" style="@(string.IsNullOrEmpty(Width) ? "":$"width:{Width};") ">
    @ChildContent
</div>
